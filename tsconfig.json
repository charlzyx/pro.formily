{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "declaration": true,
    "moduleResolution": "node",
    "paths": {
      "@proformily/antd-v5": ["src"]
    }
  },
  "include": [
    "src",
    "docs",
    "ui",
  ]
}
