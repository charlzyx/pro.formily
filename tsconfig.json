{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "declaration": true,
    "moduleResolution": "Bundler",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": ["src", "ui", "docs"]
}
